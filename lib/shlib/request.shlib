#!/bin/bash

curl_request(){
    method="$1"
    uri="$2"
    filepath="$3"

    curl_cmd="curl --config ~/.xnat_config"
    curl_cmd+=" -X $method"
    curl_cmd+=" \"$uri\" "

    if [ -z "${filepath}" ]; then
        curl_cmd+="-F \"file=@$filepath\""
    fi

    echo "Executing Curl Command..."
    echo "    $curl_cmd"
    $curl_cmd
}
api_put(){
    curl_request "PUT" $1 $2
}
api_delete(){
    curl_request "DELETE" $1
}
