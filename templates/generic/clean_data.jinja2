{% from 'components.jinja2' import pbs_head, singularity -%}
{{ pbs_head(log_dir=CHECK_DATA_DIR) }}

WorkingDir="{{ WORKING_DIR }}"
Session="{{SESSION}}"
StudyFolder="$WorkingDir/${Session}"

{% block content %}
mv $StudyFolder/${Session}/MNINonLinear $StudyFolder
mv $StudyFolder/${Session}/T*w $StudyFolder
mv $StudyFolder/sessions/specs $StudyFolder/ProcessingInfo
mv $StudyFolder/processing $StudyFolder/ProcessingInfo
mv $StudyFolder/info/hcpls $StudyFolder/ProcessingInfo
mv $StudyFolder/sessions/${Session}/session_hcp.txt $StudyFolder/ProcessingInfo/processing
mv $StudyFolder/sessions/${Session}/hcpls/hcpls2nii.log $StudyFolder/ProcessingInfo/processing
find $StudyFolder \
    -not -path "$StudyFolder/T*w/*" \
    -not -path "$StudyFolder/ProcessingInfo/*" \
    -not -path "$StudyFolder/MNINonLinear/*" \
    -delete
echo "Removing any XNAT catalog files still around."
find $WorkingDir -name "*_catalog.xml" -delete
echo "Remaining files:"
find $StudyFolder
{% endblock %}
